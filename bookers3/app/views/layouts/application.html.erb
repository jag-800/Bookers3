<!DOCTYPE html>
<html>
  <head>
    <title>Bookers2</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <script src="https://kit.fontawesome.com/7654f8b8fe.js" crossorigin="anonymous"></script>
    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body class="d-flex flex-column">
    <header class="bg-dark">
      <nav class="navbar navbar-expand-lg navbar-dark">
        <div class="container">
          <a class="navbar-brand text-white" href="/">Bookers</a>
          <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown"
                        aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
          </button>
          <div class="collapse navbar-collapse" id="navbarNavDropdown">
            <ul class="navbar-nav ml-auto">
            <% if user_signed_in? %>
              <li class="pt-2 pr-2 pb-2">
                <%= link_to user_path(current_user.id), class: "nav-link p-0 active text-light" do %>
                  <i class="fas fa-home text-white"></i> Home
                <% end %>
              </li>
              <li class="pt-2 pr-3 pb-2">
                <%= link_to users_path, class: "nav-link p-0 active text-light" do %>
                  <i class="fas fa-users text-white"></i> Users
                <% end %>
              </li>
              <li class="pt-2 pr-3 pb-2">
                <%= link_to books_path, class: "nav-link p-0 active text-light" do %>
                  <i class="fas fa-book-open text-white"></i> Books
                <% end %>
              </li>
              <li class="pt-2 pr-2 pb-2">
                <%= link_to destroy_user_session_path, method: :delete, class: "nav-link p-0 active text-light" do %>
                  <i class="fas fa-sign-out-alt text-white"></i> Log out
                <% end %>
              </li>
            <% else %>
              <li class="pt-2 pr-2 pb-2">
                <%= link_to '/', class: "nav-link p-0 active text-light" do %>
                  <i class="fas fa-home text-white"></i> Home
                <% end %>
              </li>
              <li class="pt-2 pr-3 pb-2">
                <%= link_to '/home/about', class: "nav-link p-0 active text-light" do %>
                  <i class="fas fa-link text-white"></i> About
                <% end %>
              <li class="pt-2 pr-3 pb-2">
                <%= link_to new_user_registration_path, class: "nav-link p-0 active text-light" do %>
                  <i class="fas fa-user-plus text-white"></i> Sign up
                <% end %>
              </li>
              <li class="pt-2 pr-2 pb-2">
                <%= link_to new_user_session_path, class: "nav-link p-0 active text-light" do %>
                  <i class="fas fa-sign-in-alt text-white"></i> Log in
                <% end %>
              </li>
            <% end %>
            </ul>
          </div>
        </div>
      </nav>
    </header>
    <main class="">
    <%= yield %>
    </main>
    <footer class="container mt-5 text-center">
      <p>CopyRight Infratop.inc</p>
    </footer>
  </body>
  </body>
</html>

