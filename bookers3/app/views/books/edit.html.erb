<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      <h1>Editing Book</h2>
      
      <% if @book.errors.any? %>
        <h3><%= @book.errors.count %> error prohibited this obj from being saved:</h3>
        <ul>
          <% @book.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      <% end %>

      <%= form_with model: @book, url: book_path(@book), method: :patch do |f| %>
        <div class="form-group">
          <label for="inputName">Title</label>
          <%= f.text_field :title, autofocus: true, id:"inputName", class:"form-control" %>
        </div>
        <div class="form-group">
          <label for="inputName">Opinion</label>
          <%= f.text_area :body, autofocus: true, class:"form-control" %>
        </div>
        <diV class="form-group">
          <%= f.submit "Update Book", class:"btn btn-success" %>
        </diV>
      <% end %>
      <%= link_to "Show", book_path(@book.id) %>
      |
      <%= link_to "Back", "/books" %>
    </div>
  </div>
</div>


