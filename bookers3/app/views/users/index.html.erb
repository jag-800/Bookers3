<p id="notice">
  <%= flash[:notice] %>
</p>

<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-md-3">
      
      <% if @book.errors.any? %>
        <h3><%= @book.errors.count %> error prohibited this obj from being saved:</h3>
        <ul>
          <% @book.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      <% end %>
     <!-- ユーザーの詳細 -->    
      <h2>User info</h2>
      <div>
        <%= image_tag current_user.get_profile_image(50,50) %>
        <table class="table">
          <thead>
            <tr>
              <th>name</th>
              <th>introduction</th>
            </tr>
          </thead>
          <tbody>
            <tr>
              <td><%= current_user.name %></td>
              <td><%= current_user.introduction %></td>
            </tr>
          </tbody>
        </table>
        
        <div class="">
            <p>
              <%= link_to edit_user_path(current_user), class:"btn btn-outline-secondary btn-block" do %>
                <i class="fas fa-user-cog"></i>
              <% end %>
            </p>
        </div>
      </div>
      
      <h2 class="mt-3">New book</h2>
      <%= form_with model: @book do |f| %>
        <div class="form-group">
          <label>Title</label>
          <%= f.text_field :title, class:"form-control" %>
        </div>
        <div class="form-group">
          <label>Opinion</label>
          <%= f.text_area :body, class:"form-control" %>
        </div>
        <%= f.submit 'Create Book', class:"btn btn-success" %>
      <% end %>
    </div>
    
    <div class="col-md-8 offset-md-1">
      <h2 class="mt-3">Users</h2>
      <table class="table">
        <thead>
          <tr>
            <th>Image</th>
            <th>Name</th>
            <th colspan="1"></th>
          </tr>
        </thead>
        <tbody>
          <% @users.each do |user| %><tr>
            <td><%= image_tag user.get_profile_image(100,100) %></td>
            <td><%= user.name %></td>
            <td><%= link_to "Show", user_path(user.id) %></td>
          </tr><% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>