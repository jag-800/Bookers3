<h1>User info</h1>

<h1>Books</h1>
<% @books.each do |book| %>
  <%= image_tag book.get_image, size: "50x50" %>
  <%= link_to book_path(book.id) do %>
    <%= book.title %>
  <% end %>
  <%= book.body %>
<% end %>


<h1>New book</h1>
<%= form_with model: @book do |f| %>
  <label>Title</label>
  <%= f.text_field :title%>
  <label>Opinion</label>
  <%= f.text_area :body %>
  <%= f.submit 'Create Book' %>
<% end %>
